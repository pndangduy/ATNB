@model DTO.Author
@{
    ViewBag.Title = "CreateAuthor";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="management-container">
    <h3>Thêm mới tác giả</h3>
    <hr />

    @using (Html.BeginForm("CreateAuthor", "Author", FormMethod.Post))
    {
        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bold text-right">Author Name :</label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.AuthorName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bold text-right">History :</label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.History, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-3"></div>
            <div class="col-sm-9">
                <button type="submit" class="btn btn-outline-secondary">Create</button>
            </div>
        </div>
    }

    @Html.ActionLink("Back to list", "GetAllAuthor")
</div>
